@prefix rdf:        <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:       <http://www.w3.org/2000/01/rdf-schema#> .
@prefix recipe:     <http://rdf.danielbeeke.nl/recipe/recipe-dev.ttl#> .
@prefix owl:        <http://www.w3.org/2002/07/owl#> .
@prefix dcterms:    <http://purl.org/dc/terms/> .
@prefix vann:       <http://purl.org/vocab/vann/> .
@prefix form:       <http://rdf.danielbeeke.nl/form/form-dev.ttl#> .
@prefix recipeForm: <http://rdf.danielbeeke.nl/recipe/recipe.form.ttl#> .

recipeForm:subject
    form:fieldWidget "subject" ;
    rdfs:label       "Machine name"@en ;
    rdfs:label       "Machinenaam"@nl ;
    form:input       recipe:title ;
    form:order       0 .

recipeForm:title
    form:fieldWidget  "string" ;
    rdfs:label        "Title"@en ;
    rdfs:label        "Titel"@nl ;
    form:binding      recipe:title ;
    form:order        1 ;
    form:translatable true ;
    form:required     true .

recipeForm:category
    form:fieldWidget "reference" ;
    rdfs:label       "Category"@en ;
    rdfs:label       "Categorie"@nl ;
    form:binding     recipe:category ;
    form:multiple    true ;
    form:autoCompleteSource "http://rdf.danielbeeke.nl/recipe/recipe-dev.ttl" ;
    form:autoCompleteQuery """
    PREFIX recipe:     <http://rdf.danielbeeke.nl/recipe/recipe-dev.ttl#>
    PREFIX rdfs:       <http://www.w3.org/2000/01/rdf-schema#>

    SELECT ?label ?uri {
        ?uri rdfs:subClassOf recipe:Recipe .
        ?uri rdfs:label ?label

       FILTER (lang(?label) = 'LANGUAGE')
    }
    """ ;
    form:order       2 .

recipeForm:recipe
    form:fieldWidget  "textarea" ;
    rdfs:label        "Recipe"@en ;
    rdfs:label        "Recept"@nl ;
    form:binding      recipe:content ;
    form:rows         6 ;
    form:order        3 ;
    form:translatable true ;
    form:required     true .

recipeForm:author
    form:fieldWidget "reference" ;
    rdfs:label       "Author"@en ;
    rdfs:label       "Auteur"@nl ;
    form:binding     recipe:author ;
    form:order       4 .
