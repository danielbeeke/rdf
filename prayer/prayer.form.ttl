@prefix rdf:        <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:       <http://www.w3.org/2000/01/rdf-schema#> .
@prefix prayer:     <http://rdf.danielbeeke.nl/prayer/prayer-dev.ttl#> .
@prefix owl:        <http://www.w3.org/2002/07/owl#> .
@prefix dcterms:    <http://purl.org/dc/terms/> .
@prefix vann:       <http://purl.org/vocab/vann/> .
@prefix form:       <http://rdf.danielbeeke.nl/form/form-dev.ttl#> .
@prefix prayerForm: <http://rdf.danielbeeke.nl/prayer/prayer.form.ttl#> .

@base               <http://rdf.danielbeeke.nl/prayer/prayer.form.ttl> .

<#subject>
    form:fieldWidget "subject" ;
    rdfs:label       "Machine name"@en ;
    rdfs:label       "Machinenaam"@nl ;
    form:binding     prayer:title ;
    form:order       0 .

<#title>
    form:fieldWidget  "string" ;
    rdfs:label        "Title"@en ;
    rdfs:label        "Titel"@nl ;
    form:binding      prayer:title ;
    form:order        1 ;
    form:translatable true ;
    form:required     true .

<#category>
    form:fieldWidget "string" ;
    rdfs:label       "Category"@en ;
    rdfs:label       "Categorie"@nl ;
    form:binding     prayer:category ;
    form:multiple    true ;
    form:order       2 .

<#prayer>
    form:fieldWidget  "textarea" ;
    rdfs:label        "Prayer"@en ;
    rdfs:label        "Gebed"@nl ;
    form:binding      prayer:content ;
    form:rows         6 ;
    form:order        3 ;
    form:translatable true ;
    form:required     true .

<#author>
    form:fieldWidget  "reference" ;
    rdfs:label        "Author"@en ;
    rdfs:label        "Auteur"@nl ;
    form:binding      prayer:author ;
    form:translatable true ;
    form:order        4 .
